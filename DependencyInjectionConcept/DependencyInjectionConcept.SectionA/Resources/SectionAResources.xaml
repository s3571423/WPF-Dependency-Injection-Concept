                    xmlns:viewModels1="clr-namespace:DependencyInjectionConcept.SectionA.Component.Component1.ViewModels"
                    xmlns:views1="clr-namespace:DependencyInjectionConcept.SectionA.Component.Component1.Views">

    <DataTemplate DataType="{x:Type viewModels1:ViewModelA}">
        <views1:ViewA/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:ViewModelB}">
